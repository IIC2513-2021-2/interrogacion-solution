<header>
  <div class="container">
    <div class="logo">
      <a href="<%= paths.index %>">Interrogación IIC2513 2021-2</a>
    </div>
    <nav>
      <ul>
        <li>
          <a href="<%= paths.theory %>" class="<%= path === paths.theory ? 'selected' : ''%>">Preguntas teóricas</a>
        </li>
        <li>
          <a href="<%= paths.candidates %>" class="<%= path === paths.candidates ? 'selected' : ''%>">Candidatos</a>
        </li>
      </ul>
    </nav>
    <form action="<%= paths.selectLanding %>" method="post" class='form-options'>
      <% Object.keys(options.landing).forEach((landingOption) => { %>
        <input
          type="radio"
          id="<%= landingOption %>-landing"
          class="option-input"
          name="selectedLanding"
          value="<%= landingOption %>"
          <%= selectedOptions.landing === landingOption ? 'checked' : '' %>
        />
        <label for="<%= landingOption %>-landing"><%= options.landing[landingOption].title %></label>
      <% }) %>
    </form>
    <form action="<%= paths.selectProposals %>" method="post" class='form-options'>
      <% Object.keys(options.proposals).forEach((proposalOption) => { %>
        <input
          type="radio"
          id="<%= proposalOption %>-proposal"
          class="option-input"
          name="selectedProposals"
          value="<%= proposalOption %>"
          <%= selectedOptions.proposals === proposalOption ? 'checked' : '' %>
        />
        <label for="<%= proposalOption %>-proposal"><%= options.proposals[proposalOption].title %></label>
      <% }) %>
    </form>
  </div>
</header>
